<h1><%= @cat.name %></h1>
<a href=<%= cats_url %>>Go back to index</a>
<table>
  <caption><h2>Cat Details</h2></caption>
  <tr>
    <th>Age</th>
    <th>Birth Date</th>
    <th>Color</th>
    <th>Name</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @cat.age %></td>
    <td><%= @cat.birth_date %></td>
    <td><%= @cat.color %></td>
    <td><%= @cat.name %></td>
    <td><%= @cat.sex %></td>
    <td><%= @cat.description %></td>
  </tr>
</table>
<br>
<table>
  <caption><h2>Rental Requests</h2></caption>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Approve/Deny</th>
  </tr>
  <% @rental_requests.each do |request| %>
  <tr>
    <td><%= request.start_date %></td>
    <td><%= request.end_date %></td>
    <td><%= request.status %></td>
    <% if request.pending? %>
      <td><%= button_to "Approve", [:approve, request] %></td>
      <td><%= button_to "Deny", [:deny, request] %></td>
    <% end %>
  </tr>
  <% end %>

</table>


