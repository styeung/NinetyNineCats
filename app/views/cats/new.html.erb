<form action="<%=cats_url%>" method="post">

  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label>
    Name
    <input type="text" name="cat[name]" value="<%= @cat.name %>">
  </label>
  <br>

  <label>
    Age
    <input type="text" name="cat[name]" value="<%= @cat.name %>">
  </label>
  <br>

  <label>
    Female
    <input type="radio" name="cat[sex]" value="f">
  </label>
  <label>
    Male
    <input type="radio" name="cat[sex]" value="m">
  </label>
  <br>

  <label>
    Color
    <select name="cat[color]">
      <option selected></option>
      <option value="black">Black</option>
      <option value="brown">Brown</option>
      <option value="white">White</option>
      <option value="blue">Blue</option>
      <option value="pink">Pink</option>
      <option value="red">Red</option>
    </select>
  </label>
  <br>

  <label>
    Birth Date
    <input type="date" name="cat[birth_date]">
  </label>
  <br>

  <label>
    Description
    <input type="textarea" name="cat[description]" value="Enter stories about your precious little kitten here. :) May you burn in hell">
  </label>
  <br>




</form>